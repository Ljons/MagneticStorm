<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingStart="24dp"
    android:background="@drawable/widget_background"
    android:gravity="center_vertical"
    android:minHeight="120dp">

    <TextView
        android:id="@+id/widget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_label"
        android:textSize="11sp"
        android:letterSpacing="0.08"
        android:textColor="@color/widget_label_color"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|bottom">

        <TextView
            android:id="@+id/widget_kp_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€”"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/widget_accent"
            android:letterSpacing="-0.03"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="6dp"
            android:text="Kp"
            android:textSize="15sp"
            android:textColor="@color/widget_label_color"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="@color/widget_updated_color"
        android:alpha="0.9" />
</LinearLayout>
