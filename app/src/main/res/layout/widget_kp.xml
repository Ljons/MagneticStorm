<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingStart="20dp"
    android:background="@drawable/widget_background"
    android:minHeight="200dp">

    <!-- Верхній ряд: зліва заголовок і дата, справа локація -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_level"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/widget_label_color" />
            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="@color/widget_label_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="11sp"
            android:textColor="@color/widget_label_color" />
    </LinearLayout>

    <!-- Ряд: коло з Kp | Kp X.X | час -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/widget_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/widget_kp_circle_quiet">

            <TextView
                android:id="@+id/widget_circle_kp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="—"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/widget_kp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kp —"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_label_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/widget_updated_color" />
    </LinearLayout>

    <!-- 8 погодинних слотів -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TextView android:id="@+id/widget_slot_0" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_1" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_2" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_3" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_4" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_5" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_6" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_slot_7" android:layout_width="0dp" android:layout_height="22dp" android:layout_weight="1" android:gravity="center" android:textSize="10sp" android:textColor="@android:color/white" android:background="@drawable/widget_slot_bg" />
    </LinearLayout>

    <!-- Час під слотами -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/widget_time_0" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" android:layout_marginEnd="2dp" />
        <TextView android:id="@+id/widget_time_7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="9sp" android:textColor="@color/widget_updated_color" />
    </LinearLayout>
</LinearLayout>
